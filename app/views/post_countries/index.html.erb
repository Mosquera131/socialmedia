<div class="container mx-auto px-4 py-8">
  <% if notice.present? %>
    <p class="py-2 px-4 bg-green-50 text-green-500 font-medium rounded-lg mb-5" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <% content_for :title, "Post countries" %>

  <!-- Encabezado con título y botón -->
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Post Countries</h1>
    <%= link_to "New post country", new_post_country_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium hover:bg-blue-700 transition-all" %>
  </div>

  <!-- Lista de Post Countries en formato grid -->
  <div id="post_countries" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <% @post_countries.each do |post_country| %>
      <div class="bg-white shadow-md rounded-lg p-4">
        <%= render post_country %>
        <div class="mt-4">
          <%= link_to "Show this post country", post_country, class: "rounded-lg py-2 px-4 bg-gray-100 text-gray-700 font-medium hover:bg-gray-200 transition-all inline-block" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

