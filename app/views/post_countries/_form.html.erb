<div class="max-w-4xl mx-auto bg-white p-6 shadow-md rounded-lg">
  <%= form_with(model: post_country, class: "space-y-6") do |form| %>
    <% if post_country.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-4 py-3 font-medium rounded-lg">
        <h2 class="text-lg font-semibold mb-2">
          <%= pluralize(post_country.errors.count, t('errors.template.header')) %> 
          <%= t('errors.template.body') %>
        </h2>
        <ul class="list-disc pl-5">
          <% post_country.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <label class="block text-gray-700 font-semibold mb-1"><%= t('forms.post_countries.attributes.country_name') %></label>
      <%= form.text_field :country_name, class: "block shadow-sm rounded-md border border-gray-300 outline-none px-3 py-2 mt-1 w-full focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <label class="block text-gray-700 font-semibold mb-1"><%= t('forms.post_countries.attributes.favorite_food') %></label>
      <%= form.text_field :favorite_food, class: "block shadow-sm rounded-md border border-gray-300 outline-none px-3 py-2 mt-1 w-full focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <label class="block text-gray-700 font-semibold mb-1"><%= t('forms.post_countries.attributes.favorite_excursion') %></label>
      <%= form.text_area :favorite_excursion, rows: 4, class: "block shadow-sm rounded-md border border-gray-300 outline-none px-3 py-2 mt-1 w-full focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <label class="block text-gray-700 font-semibold mb-1"><%= t('forms.post_countries.attributes.date_of_arrival') %></label>
      <%= form.date_field :date_of_arrival, class: "block shadow-sm rounded-md border border-gray-300 outline-none px-3 py-2 mt-1 w-full focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <label class="block text-gray-700 font-semibold mb-1"><%= t('forms.post_countries.attributes.date_of_departure') %></label>
      <%= form.date_field :date_of_departure, class: "block shadow-sm rounded-md border border-gray-300 outline-none px-3 py-2 mt-1 w-full focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Campo para la foto con mensajes de error -->
    <div>
      <label class="block text-gray-700 font-semibold mb-1"><%= t('forms.post_countries.attributes.photo') %></label>
      <%= form.file_field :photo, class: "block shadow-sm rounded-md border border-gray-300 outline-none px-3 py-2 mt-1 w-full focus:ring-blue-500 focus:border-blue-500" %>
      
      <!-- Bloque para mostrar errores especÃ­ficos de photo -->
      <% if @post_country.errors[:photo].any? %>
        <ul class="text-red-500 mt-2 text-sm">
          <% @post_country.errors[:photo].each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      <% end %>
    </div>

    <div>
      <label class="block text-gray-700 font-semibold mb-1"><%= t('forms.post_countries.attributes.comment') %></label>
      <%= form.text_area :comment, rows: 4, class: "block shadow-sm rounded-md border border-gray-300 outline-none px-3 py-2 mt-1 w-full focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= form.submit t('forms.post_countries.submit'), class: "w-full py-3 px-5 bg-blue-600 text-white font-semibold rounded-lg shadow hover:bg-blue-700 transition-all" %>
    </div>
  <% end %>
</div>
